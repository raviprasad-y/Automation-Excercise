{
    "AppSettings": {
        "BaseUrl": "https://automationexercise.com/login",
        "Browser": "chrome", //"firefox", "edge"
        "DefaultTimeout": 30,
        "LogLevel": "DEBUG", //"WARN", "ACTION", "ASSERT", "INPUT", "NONE"
        "ScreenshotMode": "OnFailure", // "Always", "OnFailure", "Never"
        "ExecutionMode": "Parallel", // or "Sequential"

        //not using
        "Environment": "QA", // QA, Staging, Production
        "Headless": true, // Enable headless mode for CI
        "GridUrl": "http://localhost:4444/wd/hub", // For Selenium Grid
        "Remote": false, // Run locally or remotely
        "RetryCount": 2, // Retry failed steps/tests
        "EnableVideoRecording": false, // For cloud execution
        "BrowserVersion": "latest", // Optional for remote
        "Platform": "Windows 11", // For cloud/device testing
        "EnableLogs": true
    }
}